<p>Your Comment</p>
<form action="<%= question_answers_path(question)%>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <% if !parent.nil? %>
        <input type="hidden" name="answer[parent_id]" value="<%= parent.id %>">
    <% end %>

    <div>
        <textarea style="max-width:100vh" class="textarea" name="answer[content]" rows="3" cols="200"></textarea>
    </div>
    <input class="textarea" type="submit" value="Submit">
</form>